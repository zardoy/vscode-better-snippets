{
    "name": "better-snippets",
    "displayName": "Better Snippets",
    "publisher": "zardoy",
    "icon": "resources/icon.png",
    "version": "0.0.0-dev",
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "private": true,
    "web": true,
    "categories": [
        "Snippets",
        "Other"
    ],
    "keywords": [
        "snippets",
        "snippets alternative",
        "typing snippets",
        "live templates",
        "templates"
    ],
    "contributes": {
        "commands": [
            {
                "command": "completionInsert",
                "title": "CompletionInsert"
            },
            {
                "command": "applySpecialSnippet",
                "title": "ApplySpecialSnippet"
            },
            {
                "command": "createSnippetFromSelection",
                "title": "Create Snippet From Selection"
            },
            {
                "command": "revealSnippetInSettingsJson",
                "title": "Reveal Snippet in Settings Json",
                "icon": "$(gear)"
            },
            {
                "command": "groupBy#none",
                "title": "Disable Grouping",
                "enablement": "better-snippets.grouping != disabled"
            },
            {
                "command": "groupBy#language",
                "title": "Group by Language",
                "enablement": "better-snippets.grouping != language"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "completionInsert",
                    "when": "false"
                },
                {
                    "command": "applySpecialSnippet",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "revealSnippetInSettingsJson",
                    "group": "inline",
                    "when": "view =~ /^(globalSnippets|globalTypingSnippets|workspaceSnippets|workspaceTypingSnippets)$/"
                }
            ],
            "view/title": [
                {
                    "command": "groupBy#none",
                    "group": "1",
                    "when": "view =~ /^(globalSnippets|globalTypingSnippets|workspaceSnippets|workspaceTypingSnippets)$/"
                },
                {
                    "command": "groupBy#language",
                    "group": "1",
                    "when": "view =~ /^(globalSnippets|globalTypingSnippets|workspaceSnippets|workspaceTypingSnippets)$/"
                }
            ]
        },
        "views": {
            "betterSnippets": [
                {
                    "id": "globalSnippets",
                    "name": "Global Snippets"
                },
                {
                    "id": "globalTypingSnippets",
                    "name": "Global Typing Snippets"
                },
                {
                    "id": "workspaceSnippets",
                    "name": "Workspace Snippets",
                    "visibility": "collapsed"
                },
                {
                    "id": "workspaceTypingSnippets",
                    "name": "Workspace Typing Snippets",
                    "visibility": "collapsed"
                },
                {
                    "id": "packs",
                    "name": "Packs",
                    "visibility": "collapsed"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "betterSnippets",
                    "title": "Better Snippets",
                    "icon": "$(file-code)"
                }
            ]
        },
        "submenus": [
            {
                "id": "betterSnippets.groupBy",
                "label": "test"
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "better-snippets-typescript-plugin",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ]
    },
    "activationEvents": [
        "*"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "start": "vscode-framework start",
        "start-web": "vscode-framework start --web",
        "build": "vscode-framework build && node buildTsPlugin.mjs",
        "watch-plugin": "tsc -p typescript-plugin -w",
        "integration-test": "tsc -p tsconfig.test.json && node testsOut/runTests.js",
        "integration-test:watch": "tsc-watch -p tsconfig.test.json --onSuccess \"node testsOut/runTests.js\"",
        "unit-test": "vitest --globals",
        "test": "vitest --globals --run && pnpm integration-test",
        "lint": "eslint src/**/*.ts",
        "postinstall": "patch-package"
    },
    "pnpm": {
        "overrides": {
            "esbuild": "^0.14.10",
            "typescript-json-schema": "^0.53.0"
        }
    },
    "devDependencies": {
        "@milahu/patch-package-with-pnpm-support": "^6.4.8",
        "@types/chai": "^4.3.0",
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^7.2.0",
        "@types/jest": "^27.4.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.25",
        "@types/path-browserify": "^1.0.0",
        "@types/vscode": "^1.64.0",
        "@vscode/test-electron": "^2.1.2",
        "@zardoy/tsconfig": "^1.4.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.9.0",
        "eslint-config-zardoy": "^0.2.8",
        "fs-extra": "^10.0.1",
        "glob": "^7.2.0",
        "mocha": "^9.2.0",
        "tsm": "^2.2.1",
        "typescript": "^4.5.5",
        "vitest": "^0.8.1",
        "vscode-manifest": "^0.0.8"
    },
    "dependencies": {
        "@zardoy/utils": "^0.0.4",
        "@zardoy/vscode-utils": "^0.0.9",
        "better-snippets-typescript-plugin": "workspace:*",
        "chai": "^4.3.6",
        "delay": "^5.0.0",
        "esbuild": "^0.14.10",
        "escape-string-regexp": "^5.0.0",
        "got": "^11.8.3",
        "jsonc-parser": "^3.0.0",
        "lodash.orderby": "^4.6.0",
        "modify-json-file": "^1.2.2",
        "path-browserify": "^1.0.1",
        "prettier": "^2.5.1",
        "rambda": "^6.9.0",
        "string-dedent": "^2.0.0",
        "ts-essentials": "^9.1.2",
        "tsc-watch": "^4.6.0",
        "type-fest": "^2.11.2",
        "typed-jsonfile": "^0.2.1",
        "vscode-framework": "^0.0.18",
        "vscode-snippet-parser": "^0.0.5"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 150
    }
}
