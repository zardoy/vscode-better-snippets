{
    "name": "better-snippets",
    "displayName": "Better Snippets",
    "publisher": "zardoy",
    "icon": "resources/icon.png",
    "version": "0.0.0-dev",
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "private": true,
    "web": true,
    "categories": [
        "Snippets",
        "Other"
    ],
    "keywords": [
        "snippets",
        "snippets alternative",
        "insane snippets",
        "live templates",
        "templates"
    ],
    "contributes": {
        "commands": [
            {
                "command": "completionInsert",
                "title": "CompletionInsert"
            },
            {
                "command": "applySpecialSnippet",
                "title": "applySpecialSnippet"
            },
            {
                "command": "createSnippetFromSelection",
                "title": "Create Snippet From Selection"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "completionInsert",
                    "when": "false"
                }
            ]
        }
    },
    "activationEvents": [
        "*"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "start": "vscode-framework start",
        "start-web": "vscode-framework start --web",
        "build": "vscode-framework build && tsm prepare.ts",
        "integration-test": "tsc -p tsconfig.test.json && node testsOut/runTests.js",
        "integration-test:watch": "tsc-watch -p tsconfig.test.json --onSuccess \"node testsOut/runTests.js\"",
        "test": "jest && pnpm integration-test",
        "lint": "eslint src/**/*.ts",
        "postinstall": "patch-package"
    },
    "pnpm": {
        "overrides": {
            "esbuild": "^0.14.10",
            "typescript-json-schema": "^0.53.0"
        }
    },
    "devDependencies": {
        "@milahu/patch-package-with-pnpm-support": "github:milahu/patch-package#pnpm-support-2",
        "@types/chai": "^4.3.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.25",
        "@types/vscode": "^1.64.0",
        "@vscode/test-electron": "^2.1.2",
        "@zardoy/tsconfig": "^1.4.0",
        "char": "^1.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.9.0",
        "eslint-config-zardoy": "^0.2.8",
        "glob": "^7.2.0",
        "mocha": "^9.2.0",
        "tsm": "^2.2.1",
        "typescript": "^4.5.5",
        "vscode-manifest": "^0.0.8"
    },
    "dependencies": {
        "@types/jest": "^27.4.0",
        "@types/path-browserify": "^1.0.0",
        "@zardoy/utils": "^0.0.4",
        "chai": "^4.3.6",
        "delay": "^5.0.0",
        "esbuild-runner": "^2.2.1",
        "escape-string-regexp": "^5.0.0",
        "got": "^11.8.3",
        "jest": "^27.5.1",
        "jsonc-parser": "^3.0.0",
        "modify-json-file": "^1.2.2",
        "path-browserify": "^1.0.1",
        "prettier": "^2.5.1",
        "rambda": "^6.9.0",
        "string-dedent": "^2.0.0",
        "ts-essentials": "^9.1.2",
        "tsc-watch": "^4.6.0",
        "type-fest": "^2.11.2",
        "vscode-framework": "^0.0.18",
        "vscode-snippet-parser": "^0.0.5"
    }
}
