{
    "name": "better-snippets",
    "displayName": "Better Snippets",
    "publisher": "zardoy",
    "version": "0.1.0",
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "completionInsert",
                "title": "CompletionInsert"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "completionInsert",
                    "when": "false"
                }
            ]
        },
        "configuration": {
            "properties": {
                "customSnippets": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "required": [
                                "body"
                            ],
                            "properties": {
                                "body": {
                                    "type": "string"
                                },
                                "when": {
                                    "type": "object",
                                    "properties": {
                                        "locations": {
                                            "type": "array",
                                            "description": "By default displays everywhere, specify to suggest only in these location",
                                            "items": {
                                                "oneOf": [
                                                    {
                                                        "type": "string",
                                                        "enum": [
                                                            "lineStart",
                                                            "topLineStart",
                                                            "fileStart",
                                                            "stringLiteral",
                                                            "inComments"
                                                        ],
                                                        "description": "Unimplemented: inComments. topLineStart means line start without indendation, useful for top-level declaration snippets, like `export const`"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "description": "TODO: move to triggerSymbol top-prop. UNIMPLEMENTED",
                                                        "properties": {
                                                            "afterSymbol": {
                                                                "type": "string",
                                                                "minLength": 1,
                                                                "maxLength": 1
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        "languages": {
                                            "type": "array",
                                            "description": "Don't specify to enabled in all languages"
                                        },
                                        "pathRegex": {
                                            "description": "Regexp against relative path. Example: tsconfig.json$. TODO: fileTypes top: package.json tsconfig.json etc",
                                            "type": "string"
                                        },
                                        "npmDependencies": {
                                            "type": "array",
                                            "description": "Enable snippet only when these NPM dependencies are installed. TODO: unimplemenetd",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "formatting": {
                                    "type": "object",
                                    "properties": {
                                        "insertSemicolon": {
                                            "type": "boolean"
                                        },
                                        "doubleQuotes": {
                                            "type": "boolean",
                                            "description": "Always insert double quote. Prettier rules. Otherwise always insert single. Default: auto"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {}
                },
                "builtinSnippets": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "!fileName": {
                                    "type": "boolean",
                                    "default": true
                                }
                            }
                        }
                    ],
                    "default": true
                }
            }
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "repository": "https://github.com/zardoy/vscode-fix-all-json.git",
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "cross-env DEBUG=vscode-framework:* vscode-framework start"
    },
    "devDependencies": {
        "@types/node": "^16.11.0",
        "@types/vscode": "^1.61.0",
        "@zardoy/tsconfig": "^1.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^7",
        "eslint-plugin-zardoy-config": "^0.1.0",
        "typescript": "^4.4.4",
        "vscode-framework": "^0.0.7"
    },
    "dependencies": {
        "got": "^11.8.2"
    }
}
